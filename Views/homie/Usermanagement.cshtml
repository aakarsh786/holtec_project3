    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const pages = document.querySelectorAll('.page');
            const paginationButtons = document.querySelectorAll('.pagination .page-link');
            const prevButton = document.getElementById('prevPage');
            const nextButton = document.getElementById('nextPage');

            let currentPage = 1;
            const totalPages = pages.length;

            function showPage(pageNumber) {
                pages.forEach((page, index) => {
                    page.classList.toggle('d-none', index + 1 !== pageNumber);
                });

                currentPage = pageNumber;

                // Update the button states
                prevButton.classList.toggle('disabled', currentPage === 1);
                nextButton.classList.toggle('disabled', currentPage === totalPages);

                // Update button colors
                const btnColor = '#ff7f50';
                paginationButtons.forEach(button => {
                    button.style.color = btnColor;
                });
                prevButton.style.color = nextButton.style.color = btnColor;
            }

            paginationButtons.forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    const pageNumber = parseInt(this.getAttribute('data-page'));
                    if (!isNaN(pageNumber)) {
                        showPage(pageNumber);
                    }
                });
            });

            prevButton.addEventListener('click', function (event) {
                event.preventDefault();
                if (currentPage > 1) {
                    showPage(currentPage - 1);
                }
            });

            nextButton.addEventListener('click', function (event) {
                event.preventDefault();
                if (currentPage < totalPages) {
                    showPage(currentPage + 1);
                }
            });

            // Initialize to show first page
            showPage(1);
        });
    </script>
