        }

        .badge.full-time {
            background-color: var(--primary-color);
            color: var(--card-bg);
        }

        .badge.featured {
            background-color: var(--secondary-color);
            color: var(--card-bg);
        }

        #side {
            list-style-type: none;
        }

        .editable {
            background-color: #e0f7fa;
            border: 1px dashed #00796b;
        }

        .wizard-form-checkbox {
            margin: 10px 0;
        }

        button {
            margin: 10px 5px;
        }

        @@media (max-width: 768px) {
            #profile-section {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                margin-bottom: 2rem;
            }

