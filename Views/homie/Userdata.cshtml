    <script>
        document.addEventListener('DOMContentLoaded', function() {
    const editButton = document.getElementById('editProfileBtn');
    const uploadCvButton = document.getElementById('uploadCvBtn');
    const elements = document.querySelectorAll('.profile-content [contenteditable="false"], .profile-header [contenteditable="false"]');
    const skillCheckboxes = document.querySelectorAll('#skillsForm input[type="checkbox"]');
    const skillsForm = document.getElementById('skillsForm');
    let isEditing = false;
    let selectedSkills = [];

    function enableEditing() {
        isEditing = true;
        elements.forEach(element => {
            element.setAttribute('contenteditable', 'true');
            element.classList.add('editable');
        });
        skillCheckboxes.forEach(checkbox => {
            checkbox.disabled = false;
            checkbox.parentElement.style.display = 'block';
        });
        uploadCvButton.disabled = false;
        editButton.innerHTML = '<i class="fas fa-save"></i> Save';
        editButton.classList.replace('btn-success', 'btn-primary');
        editButton.removeEventListener('click', enableEditing);
        editButton.addEventListener('click', disableEditing);
    }

    function disableEditing() {
        isEditing = false;
        elements.forEach(element => {
            element.setAttribute('contenteditable', 'false');
            element.classList.remove('editable');
        });
        skillCheckboxes.forEach(checkbox => {
            checkbox.disabled = true;
        });
        uploadCvButton.disabled = true;
        editButton.innerHTML = '<i class="fas fa-edit"></i> Edit';
        editButton.classList.replace('btn-primary', 'btn-success');
        editButton.removeEventListener('click', disableEditing);
        editButton.addEventListener('click', enableEditing);

        selectedSkills = Array.from(skillCheckboxes)
            .filter(checkbox => checkbox.checked)
            .map(checkbox => checkbox.value);

        updateSkillsDisplay();
        
        console.log('Selected Skills:', selectedSkills);
    }

    function updateSkillsDisplay() {
        skillCheckboxes.forEach(checkbox => {
            if (isEditing || selectedSkills.includes(checkbox.value)) {
                checkbox.parentElement.style.display = 'block';
            } else {
                checkbox.parentElement.style.display = 'none';
            }
        });
    }

    editButton.addEventListener('click', enableEditing);

    // Initialize the display
    updateSkillsDisplay();
});
    </script>
