@model X.PagedList.IPagedList<holtec_project3.Models.Job>

@{
    Layout = null;
}

@using X.Web.PagedList


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/AllJobsPage/AllJobs.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/navbarFooter.css">
    <title>Job Listings</title>
    <style>


        .pagination {
            display: flex;
            justify-content: center;
            padding: 10px 0;
        }

            .pagination a, .pagination span {
                margin: 0 5px;
                padding: 8px 12px;
                border: 1px solid #ddd;
                color: #333;
                text-decoration: none;
                border-radius: 4px;
                transition: background-color 0.3s, color 0.3s;
            }

                .pagination a:hover {
                    background-color: #45a049;
                    ;
                    color: #fff;
                    border-color: #45a049;
                    ;
                }

            

            .pagination .disabled {
                color: #ddd;
                pointer-events: none;
            }



        /* General Styles */
        body {
            font-family: 'Roboto', Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f0f4f8;
            margin: 0;
        }

        .container {
            max-width: 1300px;
            margin: 0 auto;
        }

        /* Header Styles */
        .header {
            text-align: center;
            margin-bottom: 30px;
            margin-top: 30px;
        }

            .header h1 {
                color: #1a237e;
                font-size: 2.5em;
                margin-bottom: 10px;
            }

            .header p {
                color: #546e7a;
                font-size: 1.1em;
            }

        /* Search Filter Styles */
      
        #filter-form {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin: 20px 0;
        }

            #filter-form select, #filter-form button {
                padding: 14px 18px;
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                font-size: 16px;
                flex-grow: 1;
                transition: all 0.3s ease;
                min-width: 200px;
                cursor: pointer;
            }

                #filter-form select:focus, #filter-form button:focus {
                    outline: none;
                    border-color: #4CAF50;
                    box-shadow: 0 0 0 2px rgba(76, 175, 80, 0.2);
                }

            #filter-form button {
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
                font-weight: bold;
                letter-spacing: 0.5px;
                flex-basis: 100%;
            }

                #filter-form button:hover {
                    background-color: #45a049;
                    transform: translateY(-2px);
                }

            #filter-form option:hover {
                cursor: pointer;
                background-color: #b34a37;
            }

 
        /* Job Listing Styles */
        .job-listings {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .job-card {
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            padding: 28px;
            background-color: #fff;
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        /* Container for the filter form */
       


            .job-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .job-type-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 15px;
        }

        .job-type {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .full-time {
            background-color: #e8f5e9;
            color: #2e7d32;
        }

        .part-time {
            background-color: #e3f2fd;
            color: #1565c0;
        }

        .urgent {
            background-color: #fbe9e7;
            color: #d84315;
        }

        .contract {
            background-color: #e0f7fa;
            color: #00695c;
        }

        .featured {
            background-color: #fff8e1;
            color: #f9a825;
        }

        .job-title {
            font-size: 1.4em;
            margin: 18px 0;
            color: #1a237e;
        }

        .company-info {
            display: flex;
            align-items: center;
            margin-bottom: 18px;
        }

        .company-logo {
            width: 75px;
            height: 35px;
            margin-right: 18px;
            /* border-radius: 50%; */
            /* object-fit: cover; */
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .job-details {
            font-size: 1em;
            color: #546e7a;
        }

            .job-details p {
                margin: 10px 0;
                display: flex;
                align-items: center;
            }

                .job-details p i {
                    margin-right: 8px;
                    font-size: 1.2em;
                }

        .skills {
            margin-top: 20px;
            flex-grow: 1;
        }

        .skill {
            display: inline-block;
            background-color: #eceff1;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.9em;
            margin-right: 10px;
            margin-bottom: 10px;
            color: #37474f;
            transition: all 0.2s ease;
        }

            .skill:hover {
                background-color: #cfd8dc;
            }

        .apply-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #eceff1;
        }

        .job-details-link {
            color: #4CAF50;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
            padding: 8px 16px;
            border-radius: 20px;
            background-color: #e8f5e9;
        }

        .job-details-link:hover {
                background-color: #4CAF50;
                color: white;
        }

        .delete {
            background-color: transparent; 
            color: red;
            border: none;
            cursor: pointer;
           
            margin-left: 150px;
        }

        .edit {
            background-color: transparent; 
            color: darkblue;
            border: none;
            cursor: pointer;         
           
        }



         


        /* Responsive Design */
        @@media (max-width: 768px) {
            .search-filters {
                flex-direction: column;
            }

                .search-filters select, .search-filters button {
                    width: 100%;
                }

            .job-listings {
                grid-template-columns: 1fr;
            }
        }
    </style>
