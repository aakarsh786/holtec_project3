    <script>
        $(document).ready(function () {
            var selectedStage = '';

            // Handle stage button clicks
            $('#stage1, #stage2, #stage3, #stage4').click(function () {
                selectedStage = $(this).text();
                if (selectedStage == 'Stage 1') {
                    $('#stage1').removeClass('btn-secondary').addClass('btn-success');
                    $('#stage2, #stage3, #stage4').removeClass('btn-success').addClass('btn-secondary');
                }
                else if (selectedStage == 'Stage 2') {
                    $('#stage1, #stage2').removeClass('btn-secondary').addClass('btn-success');
                    $('#stage3, #stage4').removeClass('btn-success').addClass('btn-secondary');
                }
                else if (selectedStage == 'Stage 3') {
                    $('#stage1, #stage2, #stage3').removeClass('btn-secondary').addClass('btn-success');
                    $('#stage4').removeClass('btn-success').addClass('btn-secondary');
                }
                else if (selectedStage == 'Stage 4') {
                    $('#stage1, #stage2, #stage3, #stage4').removeClass('btn-secondary').addClass('btn-success');
                }
                else {
                    $('#stage1, #stage2, #stage3, #stage4').removeClass('btn-success').addClass('btn-secondary');
                }
            });

            // Handle submit button click
            $('#submitStatus').click(function () {
                var comment = $('#statusComment').val();
                if (!selectedStage) {
                    alert('Please select a stage.');
                    return;
                }
                if (!comment) {
                    alert('Please enter a comment.');
                    return;
                }
                // Process form submission here
                console.log('Stage:', selectedStage);
                console.log('Comment:', comment);

                // Close modal
                $('#contactModal').modal('hide');
            });
        });
    </script>
