@model holtec_project3.Models.Signup

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="/css/login.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"></script>
    <script src="/js/login.js"></script>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <section>
        <div class="container">

            <div class="user signinBx">
                <div class="imgBx"><img src="../Images/bg2.jpeg" alt="" /></div>
                <!--  Width: 400px, Height: 500px  -->
                <div class="formBx">
                    <form asp-action="Login">
                        <h1 style="color: #d9534f;">HOLTECHUNT</h1><br><br>
                        <h2>Sign In</h2>
                        <input type="text" asp-for="Username" placeholder="Username" />
                        <input type="password" asp-for="Password" placeholder="Password" />
                        @*<a href="../HomePage/HomePage.html" class="btn btn-danger">Login</a>*@
                        <button class="btn btn-danger" type="submit">Login</button>
                        <p class="signup">
                            Don't have an account ?
                            <a href="#" onclick="toggleForm();">Sign Up.</a>
                        </p>
                    </form>
                </div>
            </div>

            <div class="user signupBx">
                <div class="formBx">
                    @*onsubmit="return false;"*@
                    <form asp-action="Signup" method="post">
                        <h1 style="color: #d9534f;">HOLTECHUNT</h1><br><br>
                        <h2>Create an account</h2>
                        <input type="text" asp-for="Username" placeholder="Username" />
                        <input type="email" asp-for="Email" placeholder="Email Address" />
                        <input type="password" asp-for="Password" placeholder="Create Password" />
                        <input type="password" name="" placeholder="Confirm Password" />
                        @*<a href="/Login&Signup/register_wizard_changed.html" class="btn btn-danger">Sign Up</a>*@
                        <button type="submit" class="btn btn-danger">Sign Up</button>
                        <p class="signup">
                            Already have an account ?
                            <a href="#" onclick="toggleForm();">Sign in.</a>
                        </p>
                    </form>
                </div>

                <div class="imgBx"><img src="../Images/bg4.jpeg" alt="" /></div>
            </div>
        </div>
    </section>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
