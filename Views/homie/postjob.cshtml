    <!-- Custom JavaScript for form wizard -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('jobPostForm');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            const steps = document.querySelectorAll('.wizard-step');
            const forms = document.querySelectorAll('.wizard-form');
            const progressBar = document.querySelector('.progress-bar');
            let currentStep = 1;

            function updateButtons() {
                prevBtn.disabled = currentStep === 1;
                nextBtn.style.display = currentStep < 3 ? 'inline-block' : 'none';
                submitBtn.style.display = currentStep === 3 ? 'inline-block' : 'none';
            }

            function updateProgressBar() {
                const progress = ((currentStep - 1) / (steps.length - 1)) * 100;
                progressBar.style.width = `${progress}%`;
            }

            function showStep(step) {
                forms.forEach(form => form.classList.remove('active'));
                steps.forEach(s => s.classList.remove('active', 'completed'));

                forms[step - 1].classList.add('active');
                for (let i = 0; i < step; i++) {
                    steps[i].classList.add(i === step - 1 ? 'active' : 'completed');
                }

                currentStep = step;
                updateButtons();
                updateProgressBar();
            }

            prevBtn.addEventListener('click', () => {
                if (currentStep > 1) {
                    showStep(currentStep - 1);
                }
            });

            nextBtn.addEventListener('click', () => {
                if (currentStep < 3) {
                    showStep(currentStep + 1);
                }
            });

            showStep(1);
        });
    </script>
