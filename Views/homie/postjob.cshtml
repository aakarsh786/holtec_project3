    <style>
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            font-weight: 600;
            text-align: center;
            padding: 10px;
            border-bottom: none;
        }

        .wizard-container {
            padding: 20px;
            position: relative;
        }

        .wizard-progress {
            display: flex;
            justify-content: space-between;
            margin-bottom: 40px;
            position: relative;
        }

        .wizard-progress::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 4px;
            background-color: #e0e0e0;
            z-index: 1;
        }

        .wizard-step {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: white;
            border: 4px solid #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            position: relative;
            z-index: 2;
            transition: all 0.3s ease;
        }

        .wizard-step.active {
            border-color: var(--primary-color);
            background-color: var(--primary-color);
            color: white;
        }

        .wizard-step.completed {
            border-color: var(--secondary-color);
            background-color: var(--secondary-color);
            color: white;
        }

        .wizard-progress .progress-bar {
            position: absolute;
            top: 50%;
            left: 0;
            height: 4px;
            background-color: var(--secondary-color);
            z-index: 1;
            transition: width 0.5s ease;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-color);
        }

        .form-control,
        .form-select {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            padding: 12px;
            transition: all 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
        }

        .btn-wizard {
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            background-color: var(--primary-color);
            color: white;
            border: none;
        }

        .btn-wizard:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            background-color: var(--hover-color);
            color: black;
        }

        .btn-wizard:disabled {
            background-color: #3e64bc;
            cursor: not-allowed;
        }


        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .wizard-form {
            animation: fadeIn 0.5s ease;
            display: none;
        }

        .wizard-form.active {
            display: block;
        }

        /* Decorative elements */
        .decoration {
            position: absolute;
            width: 150px;
            height: 150px;
            background-color: rgba(74, 144, 226, 0.1);
            border-radius: 50%;
            z-index: -1;
        }

        .decoration-1 {
            top: -75px;
            left: -75px;
        }

        .decoration-2 {
            bottom: -75px;
            right: -75px;
        }

        /* Add this new style for larger screens */
        @@media (min-width: 992px) {
            .col-lg-10 {
                flex: 0 0 auto;
                width: 83.33333333%;
            }
        }

        /* Optional: Adjust card max-width for very large screens */
