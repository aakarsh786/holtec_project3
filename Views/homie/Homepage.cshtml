    <style>
        /*Hero Section Styles*/
        .hero-section {
            background-image: url('../Images/bg2.jpeg');
            height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            background-size: cover;
            background-position: center;
            position: relative;
            color: rgb(145, 18, 18);
        }

            .hero-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.6);
            }

        .search-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 1.5rem;
            border-radius: 2px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 90%;
            position: relative;
        }

            .search-container h1 {
                color: var(--primary-color);
                margin-bottom: 1.5rem;
                font-weight: bold;
                font-size: 2.5rem;
            }

        .search-fields {
            display: flex;
            gap: 0.8rem;
            flex-wrap: wrap;
        }

            .search-fields input,
            .search-fields select,
            .search-fields a {
                flex: 1;
                padding: 0.8rem;
                border-radius: 5px;
                border: 1px solid #ddd;
                font-size: 1rem;
            }

            .search-fields button {
                background: var(--primary-color);
                color: white;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .search-fields button:hover {
                    background: #c9302c;
                }

        .trending-keywords {
            margin-top: 1.5rem;
        }

            .trending-keywords button {
                background: #d5c0c3;
                padding: 0.5rem 1rem;
                border-radius: 50px;
                margin-right: 0.5rem;
                border: none;
                font-size: 0.9rem;
                transition: background-color 0.3s ease;
            }

                .trending-keywords button:hover {
                    background: #e1e1e1;
                }

        .job-category-section {
            padding: 5rem 0;
            background-color: #fff;
        }

        .section-title {
            text-align: center;
            margin-bottom: 3rem;
        }

            .section-title h2 {
                color: var(--text-color);
                font-weight: bold;
                margin-bottom: 1rem;
                font-size: 2.5rem;
            }

            .section-title p {
                color: #666;
                font-size: 1.2rem;
            }

        .job-category-card {
            background-color: #d1b9be8b;
            padding: 2rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

            .job-category-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            }

            .job-category-card svg {
                margin-bottom: 1.5rem;
                color: var(--primary-color);
                font-size: 3rem;
            }

            .job-category-card h3 {
                font-size: 1.5rem;
                margin-bottom: 1rem;
                font-weight: bold;
                color: var(--text-color);
            }

            .job-category-card p {
                font-size: 1rem;
                color: #666;
            }

        .user-dp {
            margin-left: 5px;
        }
    </style>
</head>

